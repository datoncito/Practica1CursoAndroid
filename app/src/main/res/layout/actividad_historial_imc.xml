<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.android.curso.practica2.ActividadHistorialImc"
    android:background="@drawable/chava">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ver historial"
        android:id="@+id/recobrarHistorial"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/mibotoncito"
        android:onClick="recobrarHistorial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resultado historial:"
        android:id="@+id/textoResultadoHistorial"
        android:layout_below="@+id/recobrarHistorial"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/miestiloTextos" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/textoResultadoHistorial"
        android:layout_marginTop="64dp"
        android:layout_alignRight="@+id/recobrarHistorial"
        android:layout_alignEnd="@+id/recobrarHistorial" />
</RelativeLayout>
