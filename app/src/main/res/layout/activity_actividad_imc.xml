<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.android.curso.practica2.ActividadImc"
    android:background="@drawable/barbells">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editPeso"
        android:hint="INTRODUCE TU PESO"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:background="@drawable/mitexto"
        android:alpha="0.7"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="0dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="INTRODUCE TU ALTURA"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/mitextoinferior"
        android:layout_marginBottom="5dp"
        android:alpha="0.7"
        android:layout_below="@+id/editPeso"
        android:layout_marginTop="1dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CALCULAR IMC"
        android:id="@+id/botonCalcular"
        android:onClick="calcularImc"

        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mibotoncito"
        style="@style/misBotones" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Resultado:"
        android:id="@+id/textoResultado"
        style="@style/miestiloTextos"

        android:layout_below="@+id/guardarImc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SALIR"
        android:background="@drawable/mibotoncito"
        style="@style/miestiloTextos"
        android:id="@+id/textView3"
        android:onClick="salir"

        android:layout_below="@+id/textoResultado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="guardar imc"
        android:id="@+id/guardarImc"
        android:layout_below="@+id/botonCalcular"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mibotoncito"
        android:onClick="guardarImc"
        style="@style/miestiloTextos" />


</RelativeLayout>
