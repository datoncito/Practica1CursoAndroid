<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.android.curso.practica2.ActividadMenu"
    android:background="@drawable/rings">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULAR IMC"
        android:id="@+id/button5"
        style="@style/misBotones"
        android:onClick="irImc"
        android:background="@drawable/mibotoncito"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="78dp"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUTINAS DE ENTRENAMIENTO"
        android:id="@+id/button6"

        style="@style/misBotones"
        android:background="@drawable/mibotoncito"
        android:layout_above="@+id/button5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="PLANES DE DIETA"
        android:id="@+id/button7"
        style="@style/misBotones"
        android:background="@drawable/mibotoncito"
        android:layout_above="@+id/button6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Menu"
        android:id="@+id/textoNalgas"
        style="@style/miestiloTextos"
        android:textSize="36px"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button7"
        android:layout_alignEnd="@+id/button7"
        android:layout_marginRight="60dp"
        android:layout_marginTop="43dp" />

</RelativeLayout>
